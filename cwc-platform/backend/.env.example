# CWC Platform Backend - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
# For local development:
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/cwc_platform
# For Docker:
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/cwc_platform

# PostgreSQL credentials (used by Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cwc_platform

# ===========================================
# SECURITY
# ===========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# ===========================================
# FRONTEND URL
# ===========================================
# For CORS and email links
FRONTEND_URL=http://localhost:3000

# ===========================================
# EMAIL (SendGrid)
# ===========================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@example.com

# ===========================================
# GOOGLE OAUTH
# ===========================================
# Get from Google Cloud Console
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===========================================
# STRIPE PAYMENTS
# ===========================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ===========================================
# AI FEATURES (Claude)
# ===========================================
# Get from Anthropic Console
ANTHROPIC_API_KEY=

# ===========================================
# ZOOM INTEGRATION
# ===========================================
# Get from Zoom Marketplace
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
ZOOM_REDIRECT_URI=http://localhost:8001/api/integrations/zoom/callback

# ===========================================
# FATHOM INTEGRATION
# ===========================================
FATHOM_WEBHOOK_SECRET=
